                        <Button id="button" fx:id="closeButton" maxHeight="40.0" maxWidth="40.0" minHeight="40.0" minWidth="40.0" mnemonicParsing="false" onMouseClicked="#quit" prefHeight="40.0" prefWidth="40.0">
